<h1>Artists</h1>

<div class="visit_container">

<% for artist in @artists %>
<div class="visit">
  <div>
    <a href="/artists/<%= artist.id%>"><img src="/images/artists/<%= artist.name.downcase%>.jpg" title="<%=artist.name%> Portrait" alt="Portrait of Artist"></a>
  </div>
  <div>
    <p><a href="/artists/<%= artist.id%>"><%= artist.name%></a></p>
    <p>Date of Birth: <%= artist.dob%></p>
    <p>Date of Death: <%= artist.dod%></p>
    <a href="/exhibits/artist/<%= artist.id %>">See All exhibits by Artist</a>
  </div>
</div>
<% end %>
</div>
