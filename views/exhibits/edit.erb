<style>
nav.public {
  display: none;
}
</style>

<br></br>
<form method="post" action="/admin/exhibits/<%=@exhibit.id%>">
  <label for="title">Title:</label>
  <input id="title" type="text" name="title" value="<%=@exhibit.title%>">
  <br></br>
  <label for="year">Year:</label>
  <input id="year" type="text" name="year" value="<%=@exhibit.year%>">
  <br></br>
  <select id="artist-select" name="artist_id">
    <%for artist in @artists%>
    <% if @exhibit.artist_id.to_i == artist.id.to_i %>
    <option value="<%=artist.id%>" selected="selected"><%=artist.name%></option>
    <%else%>
    <option value="<%=artist.id%>"><%=artist.name%></option>
    <%end%>
    <%end%>
  </select>
  <br></br>
  <select id="type-select" name="type_id">
    <%for type in @types%>
    <% if @exhibit.type_id.to_i == type.id.to_i %>
    <option value="<%=type.id%>" selected="selected"><%=type.type%></option>
    <%else%>
    <option value="<%=type.id%>"><%=type.type%></option>
    <%end%>
    <%end%>
  </select>
  <br></br>
  <label for="url">Title:</label>
  <input id="url" type="text" name="url" value="<%=@exhibit.url%>">
  <br></br>

  <input type="submit" value="Edit Details"/>
</form>
